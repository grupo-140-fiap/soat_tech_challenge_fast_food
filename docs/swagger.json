    "definitions": {
        "dto.CreateCustomerRequest": {
            "type": "object",
            "required": [
                "cpf",
                "email",
                "first_name",
                "last_name"
            ],
            "properties": {
                "cpf": {
                    "type": "string",
                    "example": "123.456.789-00"
                },
                "email": {
                    "type": "string",
                    "example": "joao.silva@email.com"
                },
                "first_name": {
                    "type": "string",
                    "example": "João"
                },
                "last_name": {
                    "type": "string",
                    "example": "Silva"
                }
            }
        },
        "dto.CreateOrderRequest": {
            "type": "object",
            "required": [
                "items"
            ],
            "properties": {
                "cpf": {
                    "type": "string",
                    "example": "123.456.789-00"
                },
                "customer_id": {
                    "type": "integer",
                    "example": 123
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.OrderItemRequest"
                    }
                },
                "payment_method": {
                    "description": "Optional: qr_code, credit_card, debit_card",
                    "type": "string",
                    "example": "qr_code"
                }
            }
        },
        "dto.CreatePaymentRequest": {
            "type": "object",
            "required": [
                "amount",
                "order_id",
                "payment_method"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "order_id": {
                    "type": "integer"
                },
                "payment_method": {
                    "type": "string"
                }
            }
        },
        "dto.CreateProductRequest": {
